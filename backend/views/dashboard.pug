doctype html
html(ng-app='campaignsApp')
    include header.pug
    body(ng-controller='DashboardListController as dashboardCtr')
        #wrapper
            include navigation.pug
            #page-wrapper.gray-bg
                .row.border-bottom
                    nav.navbar.navbar-static-top(role='navigation', style='margin-bottom: 0')
                        .navbar-header
                            a.navbar-minimalize.minimalize-styl-2.btn.btn-primary(href='#')
                                i.fa.fa-bars
                            form.navbar-form-custom(role='search', method='post', action='search_results.html')
                        ul.nav.navbar-top-links.navbar-right
                            li
                                a(href='/logout')
                                    i.fa.fa-sign-out
                                    |  Log out
                .row.wrapper.border-bottom.white-bg.page-heading
                    .col-lg-10
                        h2 Chatbots payment statistics
                        ol.breadcrumb
                            li
                                a(href='/dashboard') Home
                            li
                                a Chatbot
                            li.active
                                strong Statistics
                    .col-lg-2
                .wrapper.wrapper-content.animated.fadeInRight
                    .row
                        .col-lg-12
                            .ibox.float-e-margins
                                .ibox-title
                                    h5 Campaigns
                                    .ibox-tools
                                        a.collapse-link
                                            i.fa.fa-chevron-up
                                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                                            i.fa.fa-wrench
                                        ul.dropdown-menu.dropdown-user
                                            li
                                                a(href='#') Config option 1
                                            li
                                                a(href='#') Config option 2
                                        a.close-link
                                            i.fa.fa-times
                                .ibox-content
                                    if id
                                        .alert.alert-success.alert-dismissable
                                            button.close(aria-hidden='true', data-dismiss='alert', type='button') &times;
                                            |  Created successfully
                                            |
                                            b ID #{id}
                                            | .

                                    form.form-horizontal#main(method='post', action='/dashboard', role='form', novalidate)
                                        input.form-control(type='hidden', name='jsonData', id='data')
                                        table.table.table-striped.table-bordered.table-hover.dataTables-example
                                            thead
                                                tr
                                                    th uid
                                                    th Active
                                                    th Name
                                                    th Channel
                                                    th Phone
                                                    th Start
                                                    th End
                                                    th Cteated at
                                            tbody
                                                each item in campaignList
                                                    tr.gradeA
                                                        td= item.id
                                                        td.text-center
                                                            input(type='checkbox', ng-checked=""+item.isActive+"" name="item.id" ng-model="dashboardCtr.isActive["+item.id+"]" ng-click="dashboardCtr.change("+item.id+")")
                                                        td= item.name
                                                        td= item.channel
                                                        td= item.phone
                                                        td= item.startDate
                                                        td= item.endDate
                                                        td= item.createdAt
                                            tfoot
                                                tr
                                                    th uid
                                                    th Active
                                                    th Name
                                                    th Channel
                                                    th Phone
                                                    th Start
                                                    th End
                                                    th Cteated at
                    .row
                        .col-lg-12
                            .ibox.float-e-margins
                                .ibox-title
                                    h5 Chatbot payments
                                    .ibox-tools
                                        a.collapse-link
                                            i.fa.fa-chevron-up
                                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                                            i.fa.fa-wrench
                                        ul.dropdown-menu.dropdown-user
                                            li
                                                a(href='#') Config option 1
                                            li
                                                a(href='#') Config option 2
                                        a.close-link
                                            i.fa.fa-times
                                .ibox-content
                                    table.table.table-striped.table-bordered.table-hover.dataTables-example
                                        thead
                                            tr
                                                th uid
                                                th Username
                                                th Email
                                                th Phone
                                                th Invoice ID
                                                th Billin info
                                                th Cteated at
                                        tbody
                                            each item in paymentList
                                                tr.gradeA
                                                    td= item.uid
                                                    td= item.userName
                                                    td= item.email
                                                    td= item.phone
                                                    td= item.invoiceId
                                                    td= item.billing
                                                    td= item.createdAt
                                        tfoot
                                            tr
                                                th uid
                                                th Username
                                                th Email
                                                th Phone
                                                th Invoice ID
                                                th Billin info
                                                th Cteated at
                    .row
                        .col-lg-12
                            .ibox.float-e-margins
                                .ibox-title
                                    h5 Chatbot sessions
                                    .ibox-tools
                                        a.collapse-link
                                            i.fa.fa-chevron-up
                                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                                            i.fa.fa-wrench
                                        ul.dropdown-menu.dropdown-user
                                            li
                                                a(href='#') Config option 1
                                            li
                                                a(href='#') Config option 2
                                        a.close-link
                                            i.fa.fa-times
                                .ibox-content
                                    table.table.table-striped.table-bordered.table-hover.dataTables-example
                                        thead
                                            tr
                                                th id
                                                th Phone
                                                th Username
                                                th Email
                                                th Address
                                                th Last phrase ID
                                                th Answers
                                        tbody
                                            each item in conversations
                                                tr.gradeA
                                                    td= item.id
                                                    td= item.sender
                                                    td= item.username
                                                    td= item.email
                                                    td= item.address
                                                    td= item.last_phrase_id
                                                    td= item.answers
                                        tfoot
                                            tr
                                                th id
                                                th Phone
                                                th Username
                                                th Email
                                                th Address
                                                th Last phrase ID
                                                th Answers

                include footer.pug